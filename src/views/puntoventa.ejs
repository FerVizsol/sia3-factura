<%- include('partials/_header') %>
<h1 class="mt-3 ms-3">PUNTO DE VENTAS</h1>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Nombre del Punto de Venta</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= data[i].codPunto %></td>
                                <td><%= data[i].descripcion %></td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
                
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/addPuntoVenta" method="POST">
                        <div class="form-group mb-2">
                            <input type="text" name="name" placeholder="Nombre del punto de venta" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Agregar Punto de Venta
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/_footer') %>