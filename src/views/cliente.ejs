<%- include('partials/_header') %>
<h1 class="mt-3 ms-3">CLIENTES</h1>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Codigo RUC</th>
                        <th>Nombre</th>
                        <th>E-Mail</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= data[i].codRuc %></td>
                                <td><%= data[i].nombre %></td>
                                <td><%= data[i].email %></td>
                                <td><%= data[i].direccion %></td>
                                <td><%= data[i].telefono %></td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
                
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/addCliente" method="POST">
                        <div class="form-group mb-2">
                            <input type="number" name="name" placeholder="Numero RUC" class="form-control mb-2">
                            <input type="text" name="name" placeholder="Nombre completo" class="form-control mb-2">
                            <input type="email" name="name" placeholder="E-mail" class="form-control mb-2">
                            <input type="text" name="name" placeholder="Direccion" class="form-control mb-2">
                            <input type="tel" name="name" placeholder="Telefono" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Agregar Cliente
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/_footer') %>